---
// HeroSection.astro - Banner simple con enlace
export interface Props {
  href?: string;
  backgroundVideo?: string;
  class?: string;
}

const {
  href = "/",
  backgroundVideo = "/videos/banners/magic-banner-02.mp4",
  class: className = "",
  ...rest
} = Astro.props;
---

<section
  class={`relative min-h-screen flex items-center justify-center pt-16 overflow-hidden ${className}`}
  {...rest}
>
  <!-- Video de fondo -->
  <video
    class="absolute inset-0 w-full h-full object-cover"
    autoplay
    muted
    loop
    playsinline
  >
    <source src={backgroundVideo} type="video/mp4" />
    <!-- Fallback para navegadores que no soportan video -->
    Tu navegador no soporta videos.
  </video>

  <!-- Overlay con gradiente -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black/60"
  >
  </div>

  <!-- Contenido del banner -->
  <div class="absolute bottom-0 left-0 right-0 z-10">
    <!-- Banner content placeholder -->
    <div class="container mx-auto px-4 lg:px-8 py-16">
      <div class="text-left text-neutral-100">
        <h1 class="text-6xl font-bold mb-4 font-archivo-black-static uppercase">
          TU TIENDA DE
          <img
            src="/images/graphics/magic-card.png"
            alt="Magic The Gathering Card"
            class="inline-block w-[60px] h-[60px] mx-2 align-middle"
          />
          <br />
          CARTAS FAVORITA
        </h1>
        <p class="text-xl max-w-2xl">
          Descubre el mundo m√°gico de las cartas coleccionables en nuestra
          tienda especializada. Participa en nuestros torneos semanales,
          encuentra la comunidad perfecta de jugadores y lleva tu estrategia al
          siguiente nivel.
        </p>
      </div>
    </div>
  </div>
</section>
