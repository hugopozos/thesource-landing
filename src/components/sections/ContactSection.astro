---
// ContactSection.astro - Secci칩n de contacto moderna
export interface Props {
  class?: string;
}

const { class: className = "", ...rest } = Astro.props;
---

<section
  id="contacto"
  class={`py-16 bg-black text-neutral-100 ${className}`}
  {...rest}
>
  <!-- Contenedor -->
  <div class="container mx-auto px-4 lg:px-8 relative">
    <!-- Imagen del wizard como elemento separado -->
    <div class="wizard-container">
      <img
        src="/images/graphics/wizard.png"
        alt="Wizard"
        class="wizard-image"
      />
    </div>

    <!-- Card principal tipo CTA -->
    <div class="contact-cta-card">
      <!-- Contenido principal -->
      <div class="contact-content">
        <div class="contact-text">
          <h2 class="contact-title">춰Gran torneo de apertura!</h2>
          <p class="contact-subtitle">
            S치bado 18 de octubre a las 4:00 PM. Compite por los mejores premios
            y demuestra tu habilidad en el juego de cartas m치s emocionante.
            Inscripci칩n: $150 MXN
          </p>
        </div>

        <!-- Badge de acci칩n integrado -->
        <div class="contact-badge-integrated">
          <div class="contact-actions">
            <a
              href="https://www.instagram.com/thesource_tcg/"
              target="_blank"
              rel="noopener noreferrer"
              class="badge-link"
            >
              <span class="badge-text">Cont치ctanos</span>
              <svg
                class="badge-icon"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
              >
                <path
                  d="M7 17L17 7M17 7H7M17 7V17"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </a>
            <span class="contact-location"
              >游늸 Av. Urano 14-28, Jardines de Mocambo, 94299</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-cta-card {
    background: linear-gradient(
      135deg,
      rgba(202, 79, 255, 0.1) 0%,
      rgba(202, 79, 255, 0.05) 100%
    );
    border: 1px solid rgba(202, 79, 255, 0.2);
    border-radius: 24px;
    padding: 3rem 2rem;
    display: block;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .wizard-container {
    position: absolute;
    right: -100px;
    bottom: 0;
    top: -80px;
    z-index: 1;
    pointer-events: none;
    display: flex;
    align-items: flex-end;
  }

  .wizard-image {
    width: 350px;
    height: auto;
    opacity: 1;
    transform: scaleX(-1);
    mask: linear-gradient(to top, transparent 0%, black 40%);
    -webkit-mask: linear-gradient(to top, transparent 0%, black 40%);
  }

  .contact-cta-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(202, 79, 255, 0.05) 0%,
      transparent 50%
    );
    pointer-events: none;
  }

  .contact-content {
    position: relative;
    z-index: 3;
    width: fit-content;
    max-width: 70%;
  }

  .contact-text {
    margin-bottom: 2rem;
  }

  .contact-title {
    font-size: 2.5rem;
    font-weight: 900;
    font-family: "Archivo Black", sans-serif;
    background: linear-gradient(135deg, #ca4fff 0%, #d966ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .contact-subtitle {
    font-size: 1.25rem;
    color: #d1d5db;
    line-height: 1.6;
    max-width: 500px;
  }

  .contact-badge-integrated {
    margin-top: 2rem;
    position: relative;
    z-index: 3;
  }

  .contact-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .contact-location {
    font-size: 0.9rem;
    color: #d1d5db;
    font-weight: 500;
  }

  .contact-badge {
    flex-shrink: 0;
    position: relative;
    z-index: 3;
  }

  .badge-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #ca4fff 0%, #d966ff 100%);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(202, 79, 255, 0.2);
  }

  .badge-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(202, 79, 255, 0.4);
  }

  .badge-text {
    font-family: "Archivo Black", sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-icon {
    transition: transform 0.3s ease;
  }

  .badge-link:hover .badge-icon {
    transform: translateX(2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-cta-card {
      text-align: center;
      padding: 2rem 1.5rem;
    }

    .contact-content {
      max-width: 100%;
      width: 100%;
    }

    .wizard-container {
      right: -70px;
      top: -50px;
    }

    .wizard-image {
      width: 250px;
      opacity: 1;
      mask: linear-gradient(to top, transparent 0%, black 40%);
      -webkit-mask: linear-gradient(to top, transparent 0%, black 40%);
    }

    .contact-title {
      font-size: 2rem;
    }

    .contact-subtitle {
      font-size: 1.125rem;
    }

    .badge-link {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .contact-actions {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .contact-location {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .wizard-container {
      display: none;
    }
  }
</style>
