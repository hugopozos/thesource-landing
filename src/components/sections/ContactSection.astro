---
// ContactSection.astro - Sección de contacto
export interface Props {
  class?: string;
}

const { class: className = "", ...rest } = Astro.props;
---

<section
  id="contacto"
  class={`py-16 bg-black text-neutral-100 ${className}`}
  {...rest}
>
  <!-- Contenedor -->
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header de la sección -->
    <div class="text-center mb-16">
      <h2 class="text-lg font-bold uppercase text-purple-primary mb-2">
        Contacto
      </h2>
      <h3
        class="text-4xl lg:text-5xl font-bold font-archivo-black-static text-neutral-100 mb-4 uppercase"
      >
        Estamos Aquí Para Ti
      </h3>
      <p class="text-xl text-neutral-300 max-w-3xl mx-auto">
        ¿Tienes preguntas? Escríbenos y te responderemos lo antes posible
      </p>
    </div>

    <!-- Contenido de contacto -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <!-- Información de contacto -->
      <div class="space-y-6">
        <h4 class="text-2xl font-bold font-archivo-black-static uppercase">
          Visítanos
        </h4>

        <!-- Dirección -->
        <div class="flex items-start space-x-4">
          <div
            class="flex-shrink-0 w-12 h-12 bg-purple-primary/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-6 h-6 text-purple-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div>
            <h5 class="font-semibold text-lg mb-1">Dirección</h5>
            <p class="text-neutral-300">
              Av. Principal #123, Centro<br />Ciudad, País
            </p>
          </div>
        </div>

        <!-- Teléfono -->
        <div class="flex items-start space-x-4">
          <div
            class="flex-shrink-0 w-12 h-12 bg-purple-primary/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-6 h-6 text-purple-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <div>
            <h5 class="font-semibold text-lg mb-1">Teléfono</h5>
            <p class="text-neutral-300">+123 456 7890</p>
          </div>
        </div>

        <!-- Email -->
        <div class="flex items-start space-x-4">
          <div
            class="flex-shrink-0 w-12 h-12 bg-purple-primary/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-6 h-6 text-purple-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <div>
            <h5 class="font-semibold text-lg mb-1">Email</h5>
            <p class="text-neutral-300">contacto@thesource.com</p>
          </div>
        </div>

        <!-- Horarios -->
        <div class="flex items-start space-x-4">
          <div
            class="flex-shrink-0 w-12 h-12 bg-purple-primary/10 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-6 h-6 text-purple-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <h5 class="font-semibold text-lg mb-1">Horarios</h5>
            <p class="text-neutral-300">
              Lun - Sáb: 10:00 AM - 8:00 PM<br />Domingo: Cerrado
            </p>
          </div>
        </div>
      </div>

      <!-- Formulario de contacto -->
      <div class="bg-neutral-900 p-8 rounded-lg border border-neutral-800">
        <form class="space-y-6">
          <!-- Nombre -->
          <div>
            <label for="name" class="block text-sm font-semibold mb-2">
              Nombre
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 text-neutral-100 placeholder-neutral-500 rounded-lg focus:ring-2 focus:ring-purple-primary focus:border-transparent outline-none transition-all"
              placeholder="Tu nombre"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-semibold mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 text-neutral-100 placeholder-neutral-500 rounded-lg focus:ring-2 focus:ring-purple-primary focus:border-transparent outline-none transition-all"
              placeholder="tu@email.com"
            />
          </div>

          <!-- Mensaje -->
          <div>
            <label for="message" class="block text-sm font-semibold mb-2">
              Mensaje
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 bg-neutral-800 border border-neutral-700 text-neutral-100 placeholder-neutral-500 rounded-lg focus:ring-2 focus:ring-purple-primary focus:border-transparent outline-none transition-all resize-none"
              placeholder="¿En qué podemos ayudarte?"></textarea>
          </div>

          <!-- Botón de envío -->
          <button
            type="submit"
            class="w-full bg-purple-primary hover:bg-purple-primary/90 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
