---
export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { name: "Sobre nosotros", href: "#about" },
    { name: "Productos", href: "#products" },
    { name: "Contacto", href: "#contact" },
  ],
  legal: [
    { name: "Política de Privacidad", href: "#privacy" },
    { name: "Términos de Servicio", href: "#terms" },
    { name: "Cookies", href: "#cookies" },
  ],
  social: [
    {
      name: "X",
      href: "https://x.com",
      icon: "M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z",
    },
    {
      name: "LinkedIn",
      href: "https://linkedin.com",
      icon: "M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z",
    },
  ],
};
---

<footer class={`bg-black text-neutral-100 ${className}`}>
  <div class="container mx-auto px-4 lg:px-8 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-4">
          <img
            src="/images/logos/thesource-logo.webp"
            alt="The Source Logo"
            class="h-8 w-auto"
            width="120"
            height="32"
          />
        </a>
        <p class="mb-4 max-w-md">
          Tu fuente de cartas favoritas. Descubre el mundo los coleccionables en
          nuestra tienda especializada.
        </p>
        <!-- Social Links -->
        <div class="flex space-x-4">
          {
            footerLinks.social.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="transition-colors duration-200"
                aria-label={social.name}
              >
                <svg
                  class="w-6 h-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-md font-semibold mb-4 uppercase">Compañía</h3>
        <ul class="space-y-2">
          {
            footerLinks.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-neutral-400 hover:text-purple-primary transition-colors duration-200"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="text-md font-semibold mb-4 uppercase">Legal</h3>
        <ul class="space-y-2">
          {
            footerLinks.legal.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-neutral-400 hover:text-purple-primary transition-colors duration-200"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="text-neutral-400 border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center"
    >
      <p class="text-sm">
        © {currentYear} The Source. Todos los derechos reservados.
      </p>
      <p class="text-sm mt-2 md:mt-0">
        Hecho con <span class="text-purple-primary">♥</span> por NeoDigital
      </p>
    </div>
  </div>
</footer>
