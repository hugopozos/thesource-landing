---
// CTAButton.astro - Componente reutilizable para botones de Call-to-Action
export interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline" | "glass";
  size?: "sm" | "md" | "lg";
  class?: string;
  target?: "_blank" | "_self";
}

const {
  href = "#",
  variant = "primary",
  size = "md",
  class: className = "",
  target = "_self",
  ...rest
} = Astro.props;

const baseClasses =
  "inline-block font-medium transition-all duration-300 ease-in-out";

const variantClasses = {
  primary:
    "bg-red-600 hover:bg-purple-primary text-white border border-red-600 hover:border-purple-primary",
  secondary:
    "bg-gray-600 hover:bg-purple-primary text-white border border-gray-600 hover:border-purple-primary",
  outline:
    "border-2 border-white hover:bg-purple-primary hover:border-purple-primary text-white",
  glass:
    "bg-white/20 backdrop-blur-sm text-white uppercase text-sm hover:bg-purple-primary hover:border-purple-primary border border-white/30",
};

const sizeClasses = {
  sm: "px-12 py-1.5 text-lg rounded-full",
  md: "px-12 py-1.5 text-lg rounded-full",
  lg: "px-12 py-1.5 text-lg rounded-full",
};

const classes =
  `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`.trim();
---

<a href={href} class={classes} target={target} {...rest}>
  <span class="flex items-center justify-center gap-2">
    <svg
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="inline-block"
    >
      <path
        d="M2.5 5.53125C2.5 4.28861 3.50736 3.28125 4.75 3.28125H19.25C20.4926 3.28125 21.5 4.28861 21.5 5.53125V16.0796C21.5 17.3223 20.4926 18.3296 19.25 18.3296H15.1014L12.6025 21.6956C12.461 21.8861 12.2377 21.9985 12.0003 21.9985C11.763 21.9985 11.5396 21.8861 11.3981 21.6956L8.89931 18.3296H4.75C3.50736 18.3296 2.5 17.3223 2.5 16.0796V5.53125ZM7 9.02441C6.58579 9.02441 6.25 9.3602 6.25 9.77441C6.25 10.1886 6.58579 10.5244 7 10.5244H17C17.4142 10.5244 17.75 10.1886 17.75 9.77441C17.75 9.3602 17.4142 9.02441 17 9.02441H7ZM6.25 12.7744C6.25 13.1886 6.58579 13.5244 7 13.5244H12C12.4142 13.5244 12.75 13.1886 12.75 12.7744C12.75 12.3602 12.4142 12.0244 12 12.0244H7C6.58579 12.0244 6.25 12.3602 6.25 12.7744Z"
        fill="currentColor"></path>
    </svg>
    <slot />
  </span>
</a>
